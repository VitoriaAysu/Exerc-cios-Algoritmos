//Declare uma variável com um número inteiro e mostre o quadrado dele (nxn):
#include <stdio.h>

int main(){
  int numero;
  int numQuadrado;
  
  printf("Insira um numero inteiro: \n");
  scanf("%d",&numero);

  numQuadrado = numero * numero;

  printf("O quadrado deste numero é:%d\n",numQuadrado);
  return 0;
}

//crie um programa com duas variáveis com dois números inteiros e mostre a soma, subtração, multiplicação e Divisão deles:
#include <stdio.h>
   int main(){
   int num01;
   int num02;
   int soma,subtracao,multiplicacao,divisao;
     
   printf("Insira dois numeros inteiros: \n");
   scanf("%d %d",&num01,&num02);

     soma = num01 + num02;
     subtracao = num01 - num02;
     multiplicacao = num01 * num02;
     divisao = num01 / num02;

     printf("Resultado das operacoes:%d\n%d\n%d\n%d\n",soma,subtracao,multiplicacao,divisao);
     
  return 0;
   }

//Declare duas variáveis char como iniciais de um nome e imprima-as juntas:
#include <stdio.h>

 int main(){
  char nome01;
  char nome02;

  printf("Insira suas inicias: \n");
  scanf(" %c %c",&nome01,&nome02);

  printf("As iniciais sao: %c.%c.\n",nome01,nome02);
return 0;
}

//Crie um programa com uma variável real (float), e imprima o dobro e a metade:
#include <stdio.h>

  int main(){
  float num;
  float dobro;
  float metade;

    printf("Insira um numero real: \n");
    scanf("%f",&num);

   dobro = num * 2;
   metade = num / 2;

    printf("O dobro do valor é %.2f e a metade %.2f \n",dobro,metade);

    return 0;
  }

//Faça um programa que converta temperatura de Celsius para Fahrenheit (F=Cx1.8+32):
#include <stdio.h>

  int main(){
  int celcius;
  float fahrenheit;

     printf("Converta Celcius em Fahrenheit: \n");
     scanf("%d",&celcius);

     fahrenheit = celcius * 1.8 + 32;

     printf("Resultado: %.2f Fahrenheit\n",fahrenheit);

    return 0;
  }

//Declare uma variável float com o valor de um produto e calcule o valor com 10% de desconto:
#include <stdio.h>

  int main(){
  float produto;
  float desconto;
  float resultado;

  printf("Insira o valor do produto para calcular o desconto\n");
  scanf("%f",&produto);
    
  desconto = produto * 0.10;
  resultado = produto - desconto;

  printf("Desconto = %.2f Produto com deconto = %.2f",desconto,resultado);

  return 0;
  }

//Crie um programa que leia o valor de dois produtos e calcule o valor total da compra:
#include <stdio.h>
   int main(){
   float produto01;
   float produto02;

     printf("Insira os valores da sua compra: \n");
     scanf("%f %f",&produto01,&produto02);

     printf("Valor total:%2.f\n",produto01 + produto02);

   return 0;
   }

//Declare as variáveis para armazenar letra,idade e altura de uma pessoa e exiba todas (char,int,float):
#include <stdio.h>

  int main(){
    char letra;
    int idade;
    float altura;

    printf("Insira sua letra: Sua Idade: Sua altura: \n");
    scanf("%c %d %f",&letra,&idade,&altura);

    printf("Letra: %c\n Idade: %d\n Altura: %.2f\n",letra,idade,altura);

 return 0;
  }

//Crie um software que imprima a tabuada do 5:
#include <stdio.h>
  int main(){
  int num = 5;

    printf("Tabuada do 5:\n");
    printf("%d x 0= %d\n",num, num*0);
    printf("%d x 1= %d\n",num, num*1);
    printf("%d x 2= %d\n",num, num*2);
    printf("%d x 3= %d\n",num, num*3);
    printf("%d x 4= %d\n",num, num*4);
    printf("%d x 5= %d\n",num, num*5);
    printf("%d x 6= %d\n",num, num*6);
    printf("%d x 7= %d\n",num, num*7);
    printf("%d x 8= %d\n",num, num*8);
    printf("%d x 9= %d\n",num, num*9);
    printf("%d x 10= %d\n",num, num*10); 
    
  return 0;
  }

//1)Soma de Dois Números
//Crie um algoritmo que leia dois números inteiros e exiba a soma deles.
#include <stdio.h>
  int main(){
  int num01;
  int num02;

    printf("Some dois numeros:\n");
    scanf("%d %d",&num01,&num02);

    printf("Soma: %d + %d = %d\n",num01,num02,num01+num02);

    return 0;
  }

//2)Média Aritmética
//Leia três notas de um aluno, calcule a média aritmética e mostre o resultado.
#include <stdio.h>

  int main(){
    float nota01;
    float nota02;
    float nota03;

    printf("Insira suas notas:\n");
    scanf("%f %f %f",&nota01,&nota02,&nota03);

    printf("Media:%.2f\n",(nota01 + nota02+ nota03) / 3);

  return 0;
  }

//3)Conversor de Temperatura
//Leia uma temperatura em graus Celsius e converta para Fahrenheit (F = C * 9/5 + 32).
#include <stdio.h>

  int main(){
  float celcius;

  printf("Converta Celcius para Fahrenheit: \n");
  scanf("%f",&celcius);

  printf("Fahrenheit: %.2f\n",celcius * 1.8 + 32);
    
  return 0;
  }

//4)Cálculo de Área do Retângulo
//Leia a base e a altura de um retângulo, calcule e exiba sua área (área = base * altura).
#include <stdio.h>

 int main(){
 float base;
 float altura;
 float area;

   printf("Insira a base e altura do seu retangulo:\n");
   scanf("%f %f",&base,&altura);

   area = base * altura;
   
   printf("Calculando area : %.2f x %.2f = %.2f\n",base,altura,area);

  return 0;
 }

//Pe√ßa ao usu√°rio um n√∫mero (1 a 7) e exiba o dia da semana correspondente (1 = Domingo, 2 = Segunda, etc.). 
#include <stdio.h>
int main(){
   int Dia;

   printf("Escreva um n√∫mero que corresponda a um dia(1-7)\n");
   scanf("%d",&Dia);

  switch (Dia) {
      case 1:
          printf("Domingo!\n");
          break;
      case 2:
          printf("Segunda-feira!\n");
          break;
      case 3:
          printf("Ter√ßa-feira!\n");
          break;
      case 4:
          printf("Quarta-feira!\n");
          break;
      case 5:
          printf("Quinta-feira!\n");
          break;
      case 6:
          printf("Sexta-feira!\n");
          break;
      case 7:
          printf("S√°bado!\n");
          break;
      default:
          printf("N√∫mero inv√°lido. Digite um n√∫mero entre 1 e 7.\n");
          break;
  }


  return 0;
}

//Calculadora simples
//Pe√ßa dois n√∫meros e uma opera√ß√£o (+, -, *, /). Use switch para calcular e mostrar o resultado. 
#include <stdio.h>
int main(){
  float X,Y,Z;
  char operador;

  printf("Digite um N√∫mero:\n");
  scanf("%f",&X);

  printf("Digite o operador:\n");
  scanf(" %c",&operador);

  printf("Digite o segungo n√∫mero:\n");
  scanf("%f",&Y);

  switch(operador)  {
    case'+':
    Z = X + Y;
    printf("Resultado = %.2f\n",Z);
    break;
    case'-':
    Z = X - Y;
    printf("Resultado = %.2f\n",Z);
    break;
    case'*':
    Z = X * Y;
    printf("Resultado = %.2f\n",Z);
    break;
    case'/':
      if (Y!=0){
      Z = X / Y;
      printf("Resultado = %.2f\n",Z);
      }else{
      printf("INV√ÅLIDO!\n");
      }
    break;
    default:
    printf("INV√ÅLIDO!\n");
    break;
  }
  return 0;
}

//Verificar vogal ou consoante
//Leia uma letra e use switch para dizer se √© vogal ou consoante. 
#include <stdio.h>
int main(){
   char Letra;

   printf("Digite uma letra:\n");
   scanf(" %c",&Letra);

   switch(Letra){
     case 'a': case 'A':
     case 'e': case 'E':
     case 'i': case 'I':
     case 'o': case 'O':
     case 'u': case 'U':
     printf("VOGAL!\n");
     break;
     default:
     if((Letra>='a'&& Letra<='z')||(Letra>='A'&& Letra<='Z')){
       printf("CONSOANTE!\n");
     }else{
       printf("INV√ÅLIDO!\n");
     }
     break;
   }

  return 0;
}


//Formas geom√©tricas
//Leia um n√∫mero (1 = Quadrado, 2 = C√≠rculo, etc.) e calcule a √°rea da forma escolhida (pe√ßa medidas necess√°rias). 
#include <stdio.h>
int main(){
  int X;
  float Lado,Raio,Base,Altura,Area;
  float Pi = 3.14159;
  
  printf("===MENU===\n");
  printf("Calculo de √°rea:\n");
  printf("1.QUADRADO.\n");
  printf("2.CIRC√öLO.\n");
  printf("3.TRI√ÇNGULO.\n");
  printf("4.RET√ÇNGULO\n");
  printf("Digite a op√ß√£o:\n");
  scanf("%d",&X);

  switch(X){
    case 1:
        printf("Digite o lado do quadrado:\n");
        scanf("%f", &Lado);
        Area = Lado * Lado;
        printf("√Årea do quadrado: %.2f\n",Area);
        break;

    case 2:
        printf("Digite o raio do c√≠rculo:\n ");
        scanf("%f", &Raio);
        Area = Pi * Raio * Raio;
        printf("√Årea do c√≠rculo: %.2f\n", Area);
        break;

    case 3:
        printf("Digite a base e altura do tri√¢ngulo:\n ");
        scanf("%f %f",&Base,&Altura);
        Area = ((Base * Altura) /2);
        printf("√Årea do tri√¢ngulo: %.2f\n", Area);
        break;
    
    case 4:
        printf("Digite a base do ret√¢ngulo:\n ");
        scanf("%f", &Base);
        printf("Digite a altura do ret√¢ngulo: ");
        scanf("%f", &Altura);
        Area = Base * Altura;
        printf("√Årea do ret√¢ngulo: %.2f\n", Area);
        break;

    default:
        printf("Op√ß√£o inv√°lida!\n");
        break; 
  }
  return 0;
}

//Calculadora cient√≠fica
//Adicione opera√ß√µes como pot√™ncia (^), raiz (‚àö) e m√≥dulo (%) √† calculadora do exerc√≠cio 2. 
#include <stdio.h>
#include <math.h>

int main() {
    float X, Y, Z;
    char operador;

    printf("=== CALCULADORA CIENT√çFICA ===\n");
    printf("+ (soma), - (subtra√ß√£o), * (multiplica√ß√£o), / (divis√£o)\n");
    printf("^ (pot√™ncia), r (raiz quadrada), %% (m√≥dulo)\n");

    printf("\nDigite o primeiro n√∫mero: ");
    scanf("%f", &X);

    printf("Digite o operador: ");
    scanf(" %c", &operador);  

    if (operador != 'r') {
        printf("Digite o segundo n√∫mero: ");
        scanf("%f", &Y);
    }

    switch (operador) {
        case '+':
            Z = X + Y;
            printf("Resultado = %.2f\n", Z);
            break;

        case '-':
            Z = X - Y;
            printf("Resultado = %.2f\n", Z);
            break;

        case '*':
            Z = X * Y;
            printf("Resultado = %.2f\n", Z);
            break;

        case '/':
            if (Y != 0) {
                Z = X / Y;
                printf("Resultado = %.2f\n", Z);
            } else {
                printf("Erro: divis√£o por zero!\n");
            }
            break;

        case '^':
            Z = pow(X, Y);
            printf("Resultado = %.2f\n", Z);
            break;

        case 'r':
            if (X >= 0) {
                Z = sqrt(X);
                printf("Raiz quadrada = %.2f\n", Z);
            } else {
                printf("Erro: raiz de n√∫mero negativo!\n");
            }
            break;

        case '%':
            if ((int)Y != 0) {
                Z = (int)X % (int)Y;
                printf("M√≥dulo = %.0f\n", Z);
            } else {
                printf("Erro: divis√£o por zero no m√≥dulo!\n");
            }
            break;

        default:
            printf("Operador inv√°lido!\n");
            break;
    }

    return 0;
}

///Conversor de unidades
//Ofere√ßa op√ß√µes para converter: 
//Temperatura (Celsius, Fahrenheit, Kelvin) 
//Dist√¢ncia (Km, Milhas, Metros) 
#include <stdio.h>
int main(){
    int menuPrincipal, opcao;
    float valor, resultado;

    printf("=== CONVERSOR DE UNIDADES ===\n");
    printf("1. Temperatura\n");
    printf("2. Dist√¢ncia\n");
    printf("Escolha o menu (1 ou 2): ");
    scanf("%d", &menuPrincipal);

    if (menuPrincipal == 1) {
        printf("\n=== CONVERS√ÉO DE TEMPERATURA ===\n");
        printf("1. Celsius para Fahrenheit\n");
        printf("2. Fahrenheit para Celsius\n");
        printf("3. Celsius para Kelvin\n");
        printf("4. Kelvin para Celsius\n");
        printf("5. Fahrenheit para Kelvin\n");
        printf("6. Kelvin para Fahrenheit\n");
        printf("Escolha uma op√ß√£o (1 a 6): ");
        scanf("%d", &opcao);

        printf("Digite o valor: ");
        scanf("%f", &valor);

        switch (opcao) {
            case 1:
                resultado = valor * 9 / 5 + 32;
                printf("Resultado: %.2f ¬∞F\n", resultado);
                break;
            case 2:
                resultado = (valor - 32) * 5 / 9;
                printf("Resultado: %.2f ¬∞C\n", resultado);
                break;
            case 3:
                resultado = valor + 273.15;
                printf("Resultado: %.2f K\n", resultado);
                break;
            case 4:
                resultado = valor - 273.15;
                printf("Resultado: %.2f ¬∞C\n", resultado);
                break;
            case 5:
                resultado = (valor - 32) * 5 / 9 + 273.15;
                printf("Resultado: %.2f K\n", resultado);
                break;
            case 6:
                resultado = (valor - 273.15) * 9 / 5 + 32;
                printf("Resultado: %.2f ¬∞F\n", resultado);
                break;
            default:
                printf("Op√ß√£o inv√°lida!\n");
        }

    } else if (menuPrincipal == 2) {
        printf("\n=== CONVERS√ÉO DE DIST√ÇNCIA ===\n");
        printf("1. Km para Milhas\n");
        printf("2. Milhas para Km\n");
        printf("3. Metros para Km\n");
        printf("4. Km para Metros\n");
        printf("5. Metros para Milhas\n");
        printf("6. Milhas para Metros\n");
        printf("Escolha uma op√ß√£o (1 a 6): ");
        scanf("%d", &opcao);

        printf("Digite o valor: ");
        scanf("%f", &valor);

        switch (opcao) {
            case 1:
                resultado = valor * 0.621371;
                printf("Resultado: %.2f milhas\n", resultado);
                break;
            case 2:
                resultado = valor / 0.621371;
                printf("Resultado: %.2f km\n", resultado);
                break;
            case 3:
                resultado = valor / 1000;
                printf("Resultado: %.2f km\n", resultado);
                break;
            case 4:
                resultado = valor * 1000;
                printf("Resultado: %.2f metros\n", resultado);
                break;
            case 5:
                resultado = valor * 0.000621371;
                printf("Resultado: %.5f milhas\n", resultado);
                break;
            case 6:
                resultado = valor / 0.000621371;
                printf("Resultado: %.2f metros\n", resultado);
                break;
            default:
                printf("Op√ß√£o inv√°lida!\n");
        }

    } else {
        printf("Menu inv√°lido!\n");
    }

    return 0;
}


//Simulador de caixa eletr√¥nico
//Menu com op√ß√µes: 
//Saldo (fixo) 
//Saque (verifique se tem saldo) 
//Dep√≥sito 
#include <stdio.h>
int main() {
    float saldo = 1000.00, valor;
    int opcao;

    printf("=== CAIXA ELETR√îNICO ===\n");
    printf("1. Ver Saldo\n");
    printf("2. Saque\n");
    printf("3. Dep√≥sito\n");
    printf("Escolha uma op√ß√£o: ");
    scanf("%d", &opcao);

    switch(opcao) {
        case 1:
            printf("Saldo atual: R$ %.2f\n", saldo);
            break;

        case 2:
            printf("Digite o valor do saque: R$ ");
            scanf("%f", &valor);
            if (valor > 0 && valor <= saldo) {
                saldo -= valor;
                printf("Saque realizado com sucesso!\n");
                printf("Novo saldo: R$ %.2f\n", saldo);
            } else {
                printf("Saldo insuficiente ou valor inv√°lido!\n");
            }
            break;

        case 3:
            printf("Digite o valor do dep√≥sito: R$ ");
            scanf("%f", &valor);
            if (valor > 0) {
                saldo += valor;
                printf("Dep√≥sito realizado com sucesso!\n");
                printf("Novo saldo: R$ %.2f\n", saldo);
            } else {
                printf("Valor inv√°lido!\n");
            }
            break;

        default:
            printf("Op√ß√£o inv√°lida. Encerrando...\n");
            break;
    }

    return 0;
}

//Jogo de adivinha√ß√£o
//Gere um n√∫mero aleat√≥rio (1 a 5) e pe√ßa ao usu√°rio para adivinhar. Use switch para dar dicas. 
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int sorteado, tentativa;

    srand(time(NULL)); 
    sorteado = rand() % 5 + 1;  

    printf("=== JOGO DE ADIVINHA√á√ÉO ===\n");

    do {
        printf("Adivinhe o n√∫mero (1 a 5): ");
        scanf("%d", &tentativa);

        if (tentativa == sorteado) {
            printf("üéâ Parab√©ns! Voc√™ acertou!\n");
        } else {
            printf("‚ùå Errado!\n");
            printf("üí° Dica sobre o n√∫mero:\n");

            switch (sorteado) {
                case 1:
                    printf("√â o primeiro n√∫mero natural.\n");
                    break;
                case 2:
                    printf("√â o √∫nico n√∫mero primo que √© par.\n");
                    break;
                case 3:
                    printf("√â o resultado de 1 + 2.\n");
                    break;
                case 4:
                    printf("√â o dobro de 2.\n");
                    break;
                case 5:
                    printf("√â o n√∫mero de dedos em uma m√£o.\n");
                    break;
            }
        }
    } while (tentativa != sorteado);

    return 0;
}

//Classifica√ß√£o de filmes
//Leia a idade do usu√°rio e use switch para sugerir uma classifica√ß√£o indicativa (Livre, 12+, 16+, 18+). 
#include <stdio.h>
int main() {
    int idade, X;

    printf("Digite sua idade: ");
    scanf("%d", &idade);

    if (idade < 12)
        X = 0;       
    else if (idade < 16)
        X = 1;       
    else if (idade < 18)
        X = 2;       
    else
        X = 3;       

    switch (X) {
        case 0:
            printf("Classifica√ß√£o: LIVRE\n");
            break;
        case 1:
            printf("Classifica√ß√£o: 12+\n");
            break;
        case 2:
            printf("Classifica√ß√£o: 16+\n");
            break;
        case 3:
            printf("Classifica√ß√£o: 18+\n");
            break;
        default:
            printf("Idade inv√°lida.\n");
            break;
    }

    return 0;
}

//Plano de telefonia
//Ofere√ßa planos (1. B√°sico, 2. Premium, etc.) e calcule o valor com base nos minutos usados (inclua if-else para franquia). 
#include <stdio.h>
int main() {
    int plano;
    int minutosUsados, franquia;
    float valorTotal, valorBase, valorExcedente;

    printf("=== ESCOLHA SEU PLANO DE TELEFONE ===\n");
    printf("1 - Plano B√°sico: R$25,00/m√™s | 80 min inclu√≠dos | R$0,60 por min extra\n");
    printf("2 - Plano Premium: R$45,00/m√™s | 150 min inclu√≠dos | R$0,40 por min extra\n");
    printf("3 - Plano Ilimitado: R$75,00/m√™s | minutos ilimitados\n\n");

    printf("Informe o n√∫mero do plano desejado (1 a 3): ");
    scanf("%d", &plano);

    printf("Quantos minutos voc√™ utilizou este m√™s? ");
    scanf("%d", &minutosUsados);

    switch (plano) {
        case 1:  
            valorBase = 25.0;
            franquia = 80;
            if (minutosUsados > franquia)
                valorExcedente = (minutosUsados - franquia) * 0.60;
            else
                valorExcedente = 0;
            valorTotal = valorBase + valorExcedente;
            break;

        case 2:  
            valorBase = 45.0;
            franquia = 150;
            if (minutosUsados > franquia)
                valorExcedente = (minutosUsados - franquia) * 0.40;
            else
                valorExcedente = 0;
            valorTotal = valorBase + valorExcedente;
            break;

        case 3:  
            valorBase = 75.0;
            valorTotal = valorBase;
            break;

        default:
       printf("Op√ß√£o inv√°lida!\n");
            return 1;
    }

    printf("Voc√™ usou %d minutos.\n", minutosUsados);
    printf("Valor final da fatura: R$ %.2f\n", valorTotal);

    return 0;
}

//Desconto por categoria
//Leia a categoria do produto (A, B, C) e aplique descontos diferentes (10%, 20%, etc.) usando switch.
#include <stdio.h>
int main() {
    char categoria;
    float preco, precoFinal, desconto;

    printf("Digite a categoria do produto (A, B, C): ");
    scanf(" %c", &categoria);

    printf("Digite o pre√ßo do produto: R$ ");
    scanf("%f", &preco);

    switch (categoria) {
        case 'A':
        case 'a':
            desconto = 0.10; 
            break;
        case 'B':
        case 'b':
            desconto = 0.20; 
            break;
        case 'C':
        case 'c':
            desconto = 0.30;
            break;
        default:
            printf("Categoria inv√°lida!\n");
            return 1;
    }

    precoFinal = preco * (1 - desconto);
    printf("Pre√ßo original: R$ %.2f\n", preco);
    printf("Desconto aplicado: %.0f%%\n", desconto * 100);
    printf("Pre√ßo com desconto: R$ %.2f\n", precoFinal);

    return 0;
}

//Verifica√ß√£o de senha
//Crie uma senha fixa. Pe√ßa ao usu√°rio para digitar e use switch para dar feedback (certo/errado/bloqueado ap√≥s 3 tentativas). 
#include <stdio.h>
#include <string.h>

int main() {
    const char senhaCerta[] = "123";
    char entrada[20];
    int tentativas = 0;

    while (tentativas < 3) {
        printf("Por favor, informe sua senha: ");
        scanf("%19s", entrada);

        if (strcmp(entrada, senhaCerta) == 0) {
            switch (tentativas) {
                case 0:
                    printf("Parab√©ns! Senha correta de primeira.\n");
                    break;
                default:
                    printf("Senha correta! Voc√™ conseguiu ap√≥s %d tentativa(s).\n", tentativas + 1);
            }
            break;
        } else {
            tentativas++;
            switch (tentativas) {
                case 1:
                    printf("Senha errada. Tente novamente.\n");
                    break;
                case 2:
                    printf("Ainda incorreta. √öltima tentativa!\n");
                    break;
                case 3:
                    printf("Acesso bloqueado. N√∫mero m√°ximo de tentativas excedido.\n");
                    break;
            }
        }
    }

    return 0;
}

//Simulador de clima
//Leia uma temperatura e use switch para sugerir roupas (ex.: <15¬∞C = Casaco, >30¬∞C = Roupas leves). 
#include <stdio.h>
int main() {
    int temp, faixa; 

    printf("Digite a temperatura atual em ¬∞C: ");
    scanf("%d", &temp);

    if (temp < 15) {
        faixa = 1;
    } else if (temp <= 30) {
        faixa = 2;
    } else if (temp <= 60){
        faixa = 3;
    } else {
        faixa = 0; 
    }

    switch (faixa) {
        case 1:
            printf("Est√° frio, use um casaco quente.\n");
            break;
        case 2:
            printf("Temperatura amena, vista roupas confort√°veis.\n");
            break;
        case 3:
            printf("Est√° quente, prefira roupas leves e frescas.\n");
            break;
        default:
            printf("Valor de temperatura inv√°lido.\n");
            break;
    }

    return 0;
}

//Jogo de RPG simples
//Menu com a√ß√µes (1. Atacar, 2. Defender, 3. Fugir). Use switch e n√∫meros aleat√≥rios para definir dano. 
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int escolha;
    int dano;

    srand(time(NULL)); 

    printf("=== JOGO RPG SIMPLES ===\n");
    printf("EM UM UNIVERSO POKEMON...\n");
    printf("VOC√ä ESTAVA ANDANDO NO GRAMADO DA UNIOESTE E ENCONTROU 'RATATA':\n");
    printf("Escolha sua a√ß√£o:\n");
    printf("1. Atacar\n");
    printf("2. Defender\n");
    printf("3. Fugir\n");
    printf("Digite a op√ß√£o: ");
    scanf("%d", &escolha);

    switch (escolha) {
        case 1: 
            dano = rand() % 20 + 1;  
            printf("Voc√™ atacou o inimigo e causou %d de dano!\n", dano);
            break;
        case 2: 
            dano = rand() % 10;  
            printf("Voc√™ se defendeu e reduziu o dano recebido em %d pontos!\n", dano);
            break;
        case 3: 
            if ((rand() % 2) == 0) { 
                printf("Voc√™ conseguiu fugir com sucesso!\n");
            } else {
                printf("Voc√™ tentou fugir, mas o inimigo te pegou!\n");
            }
            break;
        default:
            printf("Op√ß√£o inv√°lida. Tente novamente.\n");
            break;
    }

    return 0;
}

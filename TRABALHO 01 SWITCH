//Classificar idade
//Leia a idade de uma pessoa e use switch para classificar em "Crian√ßa" (0-12), "Adolescente" (13-19), "Adulto" (20-59) ou "Idoso" (60+). 
#include <stdio.h>
int main(){
   int Idade,X;

   printf("Digite sua IDADE:\n");
   scanf("%d",&Idade);

   if(Idade <= 12 && Idade >= 0)
     X = 1;
   else if(Idade >= 13 && Idade <= 19)
     X = 2;
   else if(Idade >= 20 && Idade <= 59)
     X = 3;
   else if(Idade >= 60)
     X = 4;
   else
     X = 0;

  switch (X) {
      case 1:
          printf("Crian√ßa!\n");
          break;
      case 2:
          printf("Adolescente!\n");
          break;
      case 3:
          printf("Adulto!\n");
          break;
      case 4:
          printf("Idoso!\n");
          break;
      default:
          printf("Idade inv√°lida!\n");
          break;
  }
   
  return 0;
}

